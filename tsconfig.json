{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "baseUrl": "./src",
    "paths": {
      "@services/*": ["services/*"],
      "@controllers/*": ["controllers/*"], 
      "@utils/*": ["utils/*"],
      "@files/*":["files/*"]
    }
  },
  "include": ["src/**/*.ts", "src/services/email/emailWorker.ts"],
  "exclude": ["node_modules"]
}
